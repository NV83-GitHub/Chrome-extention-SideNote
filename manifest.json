{
    "manifest_version" : 3,
    "name" : "BrowserNote",
    "version" : "0.1",
    "description" : "Minimalistic note taking extension for chrome, in browser, as a sidebar",
    "icons": {
        "16": "icons/note16.png",
        "32": "icons/note32.png",
        "48": "icons/note48.png",
        "128": "icons/note128.png"
      },
    "background" : {
        "service_worker" : "background.js"
    },
    "action" : {
        "default_title" : "BrowserNote",
        "default_icon" : {
            "16": "icons/note16.png",
            "32": "icons/note32.png",
            "48": "icons/note48.png",
            "128": "icons/note128.png"   
        }
    },
    "content_scripts": [
        {
          "matches": [
              "https://*/*",
              "http://*/*"
          ],
          "js": ["content.js"],
          "css": ["style.css"]
        }
      ],
    "permissions" : ["activeTab", "scripting"]
}